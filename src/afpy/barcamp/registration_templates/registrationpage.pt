<html metal:use-macro="context/@@barcampmacros/macros/page"
      i18n:domain="afpy.barcamp">
<body>
<div metal:fill-slot="body">

<p tal:content="view/prompt">Please enter your nickname</p>

<form action="@@registration?register"
      tal:condition="not:view/registered"
      method="post">

    <input type="text"
           name="nickname"
           value=""
           tal:attributes="value view/nick"  />

    <input type="submit"
       name="register" />
    <a href="#"
       tal:attributes="href python:view.url('')"
       i18n:translate="">
      cancel
    </a>
</form>


<form method="post"
      tal:condition="view/registered"
      action="@@registration?unregister">
  <input type="submit"
         name="unregister"
         value="remove me from this session" />
  <a href="?new"
     tal:condition="view/registered">
      change user
  </a>
</form>


</div>
</body>
</html>
