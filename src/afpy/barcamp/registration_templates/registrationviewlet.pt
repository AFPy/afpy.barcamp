<div id="registration">
  <a href="@@registrationpage"
     tal:condition="not: viewlet/registered"
     i18n:translate="">
    I would like to attend!
  </a>

<form action="@@registration/register"
      tal:condition="not:viewlet/registered"
      method="post">

    <input type="text"
           name="nickname"
           value=""
           tal:attributes="value viewlet/nick"  />

    <input type="submit"
       name="register" />
</form>


<form method="post"
      tal:condition="viewlet/registered"
      action="@@registration/unregister">
  <input type="submit"
         name="unregister"
         value="remove me from this session" />
  <a href="?new"
     tal:condition="viewlet/registered">
      change user
  </a>
</form>

</div>
