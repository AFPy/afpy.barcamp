<div id="registration">

<tal:block condition="viewlet/is_member">
    You are
    <span id="username"
          tal:content="viewlet/nick">
        username
    </span> (<a href="logout">logout</a>)
</tal:block>

<form method="post"
      tal:condition="not:viewlet/registered"
      action="@@register?register">
  <input type="submit"
         name="register"
         tal:attributes="value viewlet/addme_label"
         value="add me" />
</form>

<form method="post"
      tal:condition="viewlet/registered"
      action="@@register?unregister">
  <input type="submit"
         name="unregister"
         tal:attributes="value viewlet/removeme_label"
         value="remove me" />
</form>

</div>
