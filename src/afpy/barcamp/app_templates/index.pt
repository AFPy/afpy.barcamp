<html metal:use-macro="context/@@barcamptoplevelmacros/macros/page"
      i18n:domain="afpy.barcamp">
<head>
</head>
<body>
<div metal:fill-slot="body">


<h2 i18n:translate="">All events</h2>

<ul id="eventlist">
  <li tal:repeat="event context/values">
    <a href="#"
       tal:attributes="href event/@@absolute_url"
       tal:content="event/name">
    event
    </a> -
    <tal:block condition="python: event.start_date and not event.end_date">
      on <span class="start_date"
               tal:content="python: request.locale.dates.getFormatter('date').format(event.start_date)">single date</span>
    </tal:block>
    <tal:block condition="python: event.start_date and event.end_date and event.start_date != event.end_date">
      from <span class="start_date"
                 tal:content="python: request.locale.dates.getFormatter('date').format(event.start_date)">begin</span>
      to <span class="end_date"
               tal:content="python: request.locale.dates.getFormatter('date').format(event.end_date)">end</span>
    </tal:block>
  </li>
</ul>


</div>
</body>
</html>
