<metal:block define-macro="page"><metal:block define-slot="doctype"><!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd"></metal:block>

<html xmlns="http://www.w3.org/1999/xhtml"
    xml:lang="en"
    lang="en"
    i18n:domain="zope">

  <head>
    <meta http-equiv="Content-Type"
          content="text/html;charset=utf-8" />

    <metal:block define-slot="headers" />
    <metal:block define-slot="style_slot" />
    <metal:block define-slot="ecmascript_slot" />

    <link rel="icon" type="image/png"
          tal:attributes="href context/++resource++favicon.png" />
    <link href="" rel="stylesheet" type="text/css"
        tal:attributes="href static/main.css" />

  </head>

  <body tal:attributes="onload body_onload | nothing"
    tal:define="site python:modules['zope.app.component.hooks'].getSite();
                base_url python:view.url(site)">

  <!-- TODO: make the banner a Viewlet instead of using the hools module -->

  <div id="banner" class="vevent">
    <!-- use the hcalendar microformat to semantically tag the event -->
    <!-- http://microformats.org/wiki/hcalendar -->
    <h1><a class="summary" href="/"
           tal:content="python:site.name"
           tal:attributes="href base_url"
        >End of the World Unconference</a></h1>
    <div class="date"><abbr class="dtstart" title="2012-07-28"
        >28, 29, 30th of july 2012</abbr></div>
    <div class="location">Paris, center of the world</div>
    <p class="url" tal:content="base_url">http://monconference.org</p>
  </div>

  <div id="navigation">
    <ul>
      <li><a href="#sessions"
          tal:attributes="href python:view.url(site['sessions'])"
          i18n:translate="">All sessions</a></li>
      <li><a href="#program"
          i18n:translate="">Program</a></li>
      <li><a href="#people"
          tal:attributes="href python:view.url(site['people'])"
          i18n:translate="">People</a></li>
      <li><a href="#location"
          i18n:translate="">Location</a></li>
      <li><a href="#sponsors"
          i18n:translate="">Sponsors</a></li>
      <li><a href="#bookings"
          i18n:translate="">Bookings</a></li>
    </ul>
  </div>
  <div style="clear:both"></div>


  <div id="content">
    <div id="flashmessage"
         tal:define="source python:modules['z3c.flashmessage.sources'].SessionMessageSource()">
        <tal:block repeat="msg source/list">
          <p><span tal:define="dummy python:msg.prepare(source)"
            tal:content="msg/message"
            tal:attributes="class msg/type"
            i18n:translate="">
              Information or error message with respect to the last error action
          </span></p>
        </tal:block>
    </div>

    <metal:block define-slot="body" />
  </div>

  <div id="footer">
    <p i18n:translate="">powered by <a href="https://hg.afpy.org/afpy.barcamp"
        >afpy.barcamp</a></p>
  </div>

  </body>

</html>

</metal:block>
